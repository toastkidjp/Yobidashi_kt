<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:minHeight="@dimen/search_item_height"
        app:cardElevation="2dp"
        >
        <TextView
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:paddingEnd="8dp"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:foreground="@drawable/ripple_transparent"
            android:background="#DD4444"
            android:visibility="invisible"
            tools:ignore="RtlSymmetry"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@drawable/ripple_transparent"
            app:cardBackgroundColor="@color/filter_white_bb"
            app:cardElevation="2dp"
            >
            <ImageView
                android:id="@+id/search_history_image"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_gravity="start|center_vertical"
                android:adjustViewBounds="true"
                />
            <TextView
                android:id="@+id/search_history_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="76dp"
                tools:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaajyaaaaaaaaa"
                android:maxLines="3"
                android:gravity="center_vertical"
                android:textSize="18sp"
                />
            <ImageView
                android:id="@+id/search_history_bookmark"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="40dp"
                android:layout_gravity="end|center_vertical"
                app:srcCompat="@drawable/ic_favorite_gray"
                android:adjustViewBounds="true"
                android:background="@drawable/ripple_transparent"
                />
            <ImageView
                android:id="@+id/search_history_add"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                app:srcCompat="@drawable/ic_add_circle_search"
                android:adjustViewBounds="true"
                android:background="@drawable/ripple_transparent"
                />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</layout>